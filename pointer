#include <stdio.h>              //POINTERS
int main() {
    int* p1;
    int x=345;         //declaration and initialations
    p1=&x;
    
    char ch =68;  //or 'D'
    char* p2 =&ch;
    
    float y=56.22;
    float* p3=&y;
    
    double z=45.12321;
    double* p4=&z;
    
                 //accessing the data of variable
     printf("%d %d %d \n",*p1,p1,&p1);
     printf("%c %c %c \n",*p2,p2,&p2);
     printf("%f %f %f \n",*p3,p3,&p3);
     printf("%lf %lf %lf \n",*p4,p4,&p4);
    
    
                 
    return 0;
    
}

