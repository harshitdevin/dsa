// Online C compiler to run C program online
#include <stdio.h>
#define max 100
int stack[max],top1,top2;
void pushstack1(int value){
    if(top1=top2-1){
        printf("stack overflow\n");
    }
    else{
        stack[++top]=value;
        printf("pushed\n");
    }
}
void pushstack2(int value){
    if(top1=top2-1){
        printf("stack overflow\n");
    }
    else{
        stack[--top]=value;
        printf("pushed\n");
    }
}
int popstack1(){
    if(top1==-1){
        printf("stack underflow\n");
    }
    else{
        int val=stack[top1];
        top1--;
        return val;
    }
}
int popstack2(){
    if(top1==max){
        printf("stack underflow\n");
    }
    else{
        int val=stack[top2];
        top2++;
        return val;
    }
}
int peepstack1(){
    if(top1==-1){
        printf("stacck unerflow\n");
        return -1;
    }
    else{
        return stack[top1];
    }
    
}
int peepstack2(){
    if(top1==max){
        printf("stacck unerflow\n");
        return -1;
    }
    else{
        return stack[top2];
    }
    
}
void displaystack1(){
    if(top1==-1){
        printf("underflow\n");
    }
    else{
        printf("elemets are\n");
        for(int i=top1;i<=0;i--){
            printf("\t%d\n",stack[i]);
        }
    }
}
void displaystack2(){
    if(top1==-1){
        printf("underflow\n");
    }
    else{
        printf("elemets are\n");
        for(int i=top2;i<max;i--){
            printf("\t%d\n",stack[i]);
        }
    }
}
int main() {
    int choice;
    while(1){
         printf("enter1 to push \n");
         printf("enter2 to pops \n");
         printf("enter3 to peep \n");
         printf("enter2 to display \n");
         scanf("%d",&choice);
         switch(choice){
             case 1:
             int num,value;
             printf("enter stack number 1-2\n");
             scanf("%d",&num);
             printf("enter value\n");
             scanf("%d",&value);
             if(num==1){
                 pushstack1(value);
             }
             else if(num==2){
                 pushstack2(value);
             }
             else{
                 printf("invalid stack choice\n");
             }
         }
         
        
    }
   

    return 0;
}
